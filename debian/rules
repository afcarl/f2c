# endif

override_dh_auto_build:
	$(MAKE) -C src -f makefile.u

override_dh_auto_clean:
	$(MAKE) -C src -f makefile.u clean

override_dh_strip:
	dh_strip
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	strip --verbose --remove-section=.comment --remove-section=.note debian/f2c/usr/bin/f2c
endif

override_dh_installchangelog:
	dh_installchangelog changes
